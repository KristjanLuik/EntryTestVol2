
<p>
  <strong>Content:</strong>
  <%= @question.content %>
</p>

<p>
  <strong>Difficulty:</strong>
  <%= @question.difficulty %>
</p>

<p>
  <strong>Status:</strong>
  <%= @question.status %>
</p>
<h3>Answers</h3>

<p>
  <strong>Possible answer count</strong>
  <%= @question.min_options %> - <%= @question.max_options %>
</p>

<p>
  <strong>Correct answers</strong>
  <%= @question.min_correct %> - <%= @question.max_correct %>
</p>

<ul>
	<% @question.answers.each do |answer| %>
<li class="<%= answer.correct ? 'right-answer' : 'wrong-answer' %>"><%= answer.content %> <%= "(#{answer.points})" if answer.points %></li>
	<% end %>
</ul>

<h3>Labels</h3>
<ul>
	<% @question.labels.each do |label| %>
<li><%= label.name %></li>
	<% end %>
</ul>
<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>

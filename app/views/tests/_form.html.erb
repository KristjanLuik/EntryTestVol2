<%= form_for(@test) do |f| %>
  <% if @test.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@test.errors.count, "error") %> prohibited this test from being saved:</h2>

      <ul>
      <% @test.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
    <div class="field">
    <%= f.label :easy_count %><br>
    <%= f.number_field :easy_count %>
  </div>
    <div class="field">
    <%= f.label :medium_count %><br>
    <%= f.number_field :medium_count %>
  </div>
    <div class="field">
    <%= f.label :hard_count %><br>
    <%= f.number_field :hard_count %>
  </div>
  <div class="field">
    <%= f.label :duration %><br>
    <%= f.number_field :duration %>
  </div>
  <fieldset>
    <legend>Timetable</legend>
    <%= f.fields_for :timetables do |timetables_form| %>
      <span class="delete"><%= timetables_form.check_box :_destroy%></span> <%= timetables_form.label :_destroy %><br/>
      <table class="table-striped table-responsive">
        <tr>
          <th><%= timetables_form.label :registration_start %></th>
          <th>&nbsp;&nbsp;&nbsp;&nbsp;</th>
          <th><%= timetables_form.label :registration_end %></th>
        </tr>
        <tr>
          <td><%= timetables_form.datetime_select :registration_start %></td>
          <td>&nbsp;&nbsp;- </td>
          <td><%= timetables_form.datetime_select :registration_end %></td>
        </tr>

        <tr>
          <th><%= timetables_form.label :start %></th>
          <th>&nbsp;&nbsp;&nbsp;&nbsp;</th>
          <th><%= timetables_form.label :end %></th>
        </tr>
        <tr>
          <td><%= timetables_form.datetime_select :start %></td>
          <td>&nbsp;&nbsp;- </td>
          <td><%= timetables_form.datetime_select :end %></td>
        </tr>

        <tr>
          <th><%= timetables_form.label :slots %></th>
          <th>&nbsp;&nbsp;&nbsp;&nbsp;</th>
          <th><%= timetables_form.label :location %></th>
        </tr>
        <tr>
          <td><%= timetables_form.number_field :slots %></td>
          <td>  </td>
          <td><%= timetables_form.text_field :location %></td>
        </tr>
      </table>

    <% end %>
  </fieldset>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
